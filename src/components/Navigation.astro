---
import ThemeInput from "@components/ThemeInput.astro";
import Image from "@components/Image.astro";
import { owner } from "@data/constants";
import Social from "./Social.astro";
---

<div
  class="navbar to-base-100 sticky top-0 z-20 justify-center bg-transparent bg-linear-to-t from-transparent p-0 backdrop-blur-sm"
>
  <div class="navbar max-w-6xl">
    <div class="navbar-start">
      <a
        class="btn btn-ghost mx-2 flex h-full items-center gap-3 space-x-3 rounded-md p-1 px-2"
        href="/"
      >
        <Image {...owner.pfp} inferSize class="block size-8.75 rounded-md" />
        <span class="hidden sm:inline">MareStare</span>
      </a>
    </div>
    <div class="navbar-center flex items-center justify-end gap-2">
      {
        owner.socials.map(({ socials }) =>
          socials.map((social) => (
            <Social
              social={social}
              class="btn btn-ghost size-10 rounded-md p-1"
            />
          )),
        )
      }
    </div>
    <div class="navbar-end items-center justify-end gap-3 pr-5 sm:flex">
      <ThemeInput />
    </div>
  </div>
</div>
