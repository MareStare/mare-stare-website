---
interface Props {
  srcWebm: string;
  // MP4 versions are important for Apple devices, they don't work well with WebM
  srcMp4: string;
  width: number;
  height: number;
  alt: string;
  class?: string;
}

const { props } = Astro;
---

<video
  controls
  class="rounded-box border-base-300 border shadow-md"
  aria-label={props.alt}
  class:list={[props.class]}
  width={props.width}
  height={props.height}
>
  <source src={props.srcWebm} type="video/webm" />
  <source src={props.srcMp4} type="video/mp4" />
</video>
